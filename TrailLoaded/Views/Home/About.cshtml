@{
    ViewData["Title"] = "About Us";
}

<!-- Full Width Banner -->
<div class="mb-5">
    <img src="~/images/aboutUs.png"
         class="img-fluid w-100"
         alt="About Us Banner"
         style="height: 400px; object-fit: cover;" />
</div>

<div class="container py-5">

    <!-- About Us Title -->
    <div class="text-center mb-5">
        <p class="lead text-dark">TrailLoaded School – Inspiring young minds with excellence, diversity & vision.</p>
    </div>

    <!-- Headings Row (Clickable Links) -->
    <div class="row text-center mb-5 section-nav bg-light rounded shadow-sm py-2">
        <div class="col"><a href="#who" class="fw-bold">Who We Are</a></div>
        <div class="col"><a href="#vision" class="fw-bold">Vision & Mission</a></div>
        <div class="col"><a href="#management" class="fw-bold">Management</a></div>
        <div class="col"><a href="#journey" class="fw-bold">Our Journey</a></div>
        <div class="col"><a href="#diversity" class="fw-bold">Diversity</a></div>
    </div>

    <style>
        /* Default background */
        .section-nav {
            background-color: #f8f9fa; /* light gray */
            border-radius: 10px;
            transition: background-color 0.3s ease-in-out;
        }

            /* Hover effect for row */
            .section-nav:hover {
                background-color: #0d6efd; /* blue on hover */
            }

            /* Links color inside row */
            .section-nav a {
                color: #000;
                text-decoration: none;
                transition: color 0.3s ease-in-out;
            }

                .section-nav a:hover {
                    color: #fff; /* change link color when hovering row */
                }
    </style>


    <!-- Who We Are -->
    <div id="who" class="row align-items-center mb-5">
        <div class="col-md-7">
            <img src="~/images/whowr.jpg" class="img-fluid rounded shadow-lg about-img" alt="Who We Are" />
        </div>
        <div class="col-md-5">
            <h2 class="fw-bold mb-3">Who We Are</h2>
            <p>
                At TrailLoaded School, we are dedicated to nurturing creativity, discipline, and innovation in every student.
                We believe education is more than knowledge – it is shaping leaders for tomorrow.
            </p>
        </div>
    </div>

    <!-- Vision & Mission -->
    <div id="vision" class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-7">
            <img src="~/images/mvv.png" class="img-fluid rounded shadow-lg about-img" alt="Vision & Mission" />
        </div>
        <div class="col-md-5">
            <h2 class="fw-bold mb-3">Vision & Mission & Values</h2>
            <p>
                Our vision is to create global citizens with strong values. Our mission is to empower students through
                academic excellence, modern learning, and holistic growth. The values that are carried by students build their future.
            </p>
        </div>
    </div>

    <!-- Management -->
    <div id="management" class="row align-items-center mb-5">
        <div class="col-md-7">
            <img src="~/images/management.jpg" class="img-fluid rounded shadow-lg about-img" alt="Management" />
        </div>
        <div class="col-md-5">
            <h2 class="fw-bold mb-3">Management</h2>
            <p>
                Our management team brings decades of educational expertise, blending tradition with innovation.
                They ensure TrailLoaded School stays ahead in delivering world-class education.
            </p>
        </div>
    </div>

    <!-- Our Journey -->
    <div id="journey" class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-7">
            <img src="~/images/aboutUs.png" class="img-fluid rounded shadow-lg about-img" alt="Our Journey" />
        </div>
        <div class="col-md-5">
            <h2 class="fw-bold mb-3">Our Journey</h2>
            <p>
                From a humble beginning to a thriving institution, our journey reflects determination,
                student achievements, and community trust.
            </p>
        </div>
    </div>

    <!-- Diversity -->
    <div id="diversity" class="row align-items-center mb-2">
        <div class="col-md-7">
            <img src="~/images/diversity.jpeg" class="img-fluid rounded shadow-lg about-img" alt="Diversity" />
        </div>
        <div class="col-md-5">
            <h2 class="fw-bold mb-3">Diversity</h2>
            <p>
                We celebrate diversity and inclusivity, welcoming students from all backgrounds.
                Our multicultural environment helps build respect and unity.
            </p>
        </div>
    </div>

</div>

<!-- Google Map Section -->
<section class="map-with-card-section position-relative my-1">
    <!-- Full width map iframe -->
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3806.038639434104!2d78.4730812747964!3d17.38641158807326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb973cabcd6911%3A0x2f04e6ed1d7aaf39!2sTrailLoaded%20Institution!5e0!3m2!1sen!2sin!4v1691777777777!5m2!1sen!2sin"
            width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade" class="map-iframe">
    </iframe>

    <!-- Floating info card on top right -->
    <div class="map-info-card shadow rounded p-2 bg-dark text-white position-absolute top-0 end-0 m-3">
        <h3 class="mb-2">
            <i class="bi bi-building me-2"></i> TrailLoaded Institution
        </h3>
        <p><i class="bi bi-geo-alt-fill me-2"></i> 123 Main Street, Your City, Your State, ZIP</p>
        <p><i class="bi bi-telephone-fill me-2"></i> +91 (123) 456-7890</p>
        <p><i class="bi bi-envelope-fill me-2"></i> info@trailloaded.edu</p>
    </div>
</section>

<!-- CSS Animations & Styles -->
<style>
    html {
        scroll-behavior: smooth; /* smooth scrolling fallback */
    }

    .section-nav a {
        text-decoration: none;
        color: #000;
        transition: color 0.3s ease-in-out, transform 0.2s ease-in-out;
    }

        .section-nav a:hover {
            color: #0d6efd;
            transform: scale(1.1);
        }

    h2 {
        transition: color 0.3s ease-in-out;
    }

        h2:hover {
            color: #0d6efd;
        }

    .about-img {
        width: 100%;
        height: 350px;
        object-fit: cover;
    }

    img {
        transition: transform 0.4s ease-in-out;
    }

        img:hover {
            transform: scale(1.05);
        }

    .map-info-card {
        max-width: 300px;
    }
</style>

<!-- JS for Smooth Scroll -->
<script>
    document.querySelectorAll('.section-nav a').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.getAttribute('href').substring(1);
            const targetSection = document.getElementById(targetId);
            targetSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    });
</script>
