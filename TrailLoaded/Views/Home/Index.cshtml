@{
    ViewData["Title"] = "Home";
}


<div class="container-fluid full-width-carousel px-0">
    <div id="schoolCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/Achievement.png" alt="Excellence in Marks" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Excellence in Marks</h5>
                    <p>Empowering students to top their boards and excel in academics.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/iit.png" alt="IIT-JEE Mains & NEET" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>IIT-JEE Mains & NEET Preparation</h5>
                    <p>Best in class coaching and mentoring for competitive exams.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/abacus.png" alt="Abacus Champions" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Abacus Champions in State</h5>
                    <p>State-level recognition for our abacus wizards.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/extra.png" alt="Extracurricular Activities" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>Extracurricular Activities</h5>
                    <p>Holistic development through sports, arts, and events.</p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#schoolCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#schoolCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div class="container mt-5">
    <ul class="nav nav-tabs" id="infoTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="who-tab" data-bs-toggle="tab" data-bs-target="#who" type="button" role="tab">
                Who We Are?
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="mission-tab" data-bs-toggle="tab" data-bs-target="#mission" type="button" role="tab">
                Mission
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="management-tab" data-bs-toggle="tab" data-bs-target="#management" type="button" role="tab">
                Management
            </button>
        </li>
    </ul>

    



    <div class="tab-content border border-top-0 p-4" id="infoTabContent">

        <!-- Who We Are -->
        <div class="tab-pane fade show active" id="who" role="tabpanel">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="~/images/LogoTree.png" class="img-fluid rounded" alt="Who We Are">
                </div>
                <div class="col-md-8">
                    <h4>Who We Are</h4>
                    <p>
                        We are a dedicated institution committed to nurturing young minds and shaping future leaders. Our legacy of excellence spans over 15 years, empowering thousands of students to shine academically and morally. Expanding the knowledge that students carry for enhancing their carrier starts from here.
                    </p>
                </div>
            </div>
        </div>

        <!-- Mission -->
        <div class="tab-pane fade" id="mission" role="tabpanel">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="~/images/iit.png" class="img-fluid rounded" alt="Our Mission">
                </div>
                <div class="col-md-8">
                    <h4>Our Mission</h4>
                    <p>
                        Our mission is to provide quality education that fosters intellectual growth, character building, and social responsibility. We aim to unlock each child’s potential through personalized learning and value-based teaching.
                    </p>
                </div>
            </div>
        </div>

        <!-- Management -->
        <div class="tab-pane fade" id="management" role="tabpanel">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="~/images/extra.png" class="img-fluid rounded" alt="Management">
                </div>
                <div class="col-md-8">
                    <h4>Our Management</h4>
                    <p>
                        Led by experienced educators and visionary leaders, our management team ensures smooth functioning, innovative curriculum planning, and a nurturing environment for all students.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Correspondent's Quote Section -->
    <section class="correspondent-section">
        <div class="container py-5">
            <div class="row align-items-center">
                <!-- Quote -->
                <div class="col-md-6 quote-box">
                    <h2 class="quote-text">"Education is not just about books, it's about building character. We’ve stayed true to this for over a decade at Trail Load Institution."</h2>
                </div>

                <!-- Image & Info -->
                <div class="col-md-6 text-center">
                    <img src="~/images/LogoTree.png" class="img-fluid rounded-circle correspondent-img" alt="Correspondent" />
                    <div class="mt-3">
                        <h4 class="text-white">Mr. Syed Anwar</h4>
                        <p class="text-muted">M.A., M.Ed., Correspondent</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="achievements-section">
        <div class="overlay"></div>

        <div class="container text-white py-5 position-relative">
            <h2 class="achievements-heading text-center mb-5">Our Achievements</h2>

            <div class="row text-center">
                <!-- Academic -->
                <div class="col-md-4">
                    <div class="achievement-item p-4">
                        <img src="~/images/iit.png" alt="Academic" class="achievement-img mb-3" />
                        <h4>Academic Excellence</h4>
                        <p>Our students consistently score top marks and achieve academic awards.</p>
                    </div>
                </div>

                <!-- Co-curricular -->
                <div class="col-md-4">
                    <div class="achievement-item p-4">
                        <img src="~/images/abacus.png" alt="Co-curricular" class="achievement-img mb-3" />
                        <h4>Co-curricular Activities</h4>
                        <p>We encourage creativity and teamwork through arts, debate, and clubs.</p>
                    </div>
                </div>

                <!-- Sports -->
                <div class="col-md-4">
                    <div class="achievement-item p-4">
                        <img src="~/images/Achievement.png" alt="Sports" class="achievement-img mb-3" />
                        <h4>Sports Champions</h4>
                        <p>Our teams have won numerous competitions in athletics and team sports.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="map-with-card-section position-relative my-3">
        <!-- Full width map iframe -->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3806.038639434104!2d78.4730812747964!3d17.38641158807326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb973cabcd6911%3A0x2f04e6ed1d7aaf39!2sTrailLoaded%20Institution!5e0!3m2!1sen!2sin!4v1691777777777!5m2!1sen!2sin"
                width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade" class="map-iframe">
        </iframe>


        <!-- Floating info card on top right -->
        <div class="map-info-card shadow rounded p-4 bg-dark text-white">
            <h3 class="mb-3">
                <i class="bi bi-building me-2"></i> TrailLoaded Institution
            </h3>
            <p><i class="bi bi-geo-alt-fill me-2"></i> 123 Main Street, Your City, Your State, ZIP</p>
            <p><i class="bi bi-telephone-fill me-2"></i> +91 (123) 456-7890</p>
            <p><i class="bi bi-envelope-fill me-2"></i> info@trailloaded.edu</p>
        </div>
    </section>


