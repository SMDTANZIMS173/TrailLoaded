@model TrailLoaded.Models.ContactForm
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5" style="max-width:600px;">
    <h2 class="text-center mb-4">Contact Us</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="Contact" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Subject" class="form-label"></label>
            <input asp-for="Subject" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Message" class="form-label"></label>
            <textarea asp-for="Message" placeholder="enter your message here..." class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Preferred Contact Method</label>
            <select asp-for="PreferredContactMethod" class="form-select">
                <option value="">--Select--</option>
                <option value="Email">Email</option>
                <option value="Phone">Phone</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</div>

<section class="map-with-card-section position-relative my-3">
    <!-- Full width map iframe -->
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3806.038639434104!2d78.4730812747964!3d17.38641158807326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb973cabcd6911%3A0x2f04e6ed1d7aaf39!2sTrailLoaded%20Institution!5e0!3m2!1sen!2sin!4v1691777777777!5m2!1sen!2sin"
            width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade" class="map-iframe">
    </iframe>


    <!-- Floating info card on top right -->
    <div class="map-info-card shadow rounded p-4 bg-dark text-white">
        <h3 class="mb-3">
            <i class="bi bi-building me-2"></i> TrailLoaded Institution
        </h3>
        <p><i class="bi bi-geo-alt-fill me-2"></i> 123 Main Street, Your City, Your State, ZIP</p>
        <p><i class="bi bi-telephone-fill me-2"></i> +91 (123) 456-7890</p>
        <p><i class="bi bi-envelope-fill me-2"></i> info@trailloaded.edu</p>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
